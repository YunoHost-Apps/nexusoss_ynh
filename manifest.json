{
    "packaging_format": 1,
    "name": "Nexus Repository OSS",
    "id": "nexusoss",
    "description": {
        "en": "sonatype nexus repository manager OSS"
    },
    "url": "https://github.com/selamanse/nexusoss_ynh",
    "license": "GNU GPLv3",
    "version": "3.4.0-rc.0",
    "maintainer": {
        "name": "selamanse",
        "email": "selamanse@scheinfrei.info",
        "url": "https://github.com/selamanse"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "requirements": {
        "yunohost": ">> 2.5.6"
    },
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path"
                },
                "example": "/nexus",
                "default": "/nexus"
            },
            {
               "name": "is_public",
                "ask": {
                    "en": "Is it a public application?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
	          },
            {
               "name": "lang",
                "ask": {
                    "en": "Select default language"
                },
                "choices": ["English"],
                "default": "English"
            }
        ]
    }
}
